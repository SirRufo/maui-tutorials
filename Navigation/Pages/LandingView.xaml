<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
  x:Class="Navigation.Pages.LandingView"
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:shared="clr-namespace:Navigation.Shared">
  <ContentPage.ToolbarItems>
    <ToolbarItem shared:RouteNavigation.Route="//join" Text="Get Started" />
  </ContentPage.ToolbarItems>
  <VerticalStackLayout Padding="20" MaximumWidthRequest="600">
    <Label
      FontSize="Large"
      HorizontalOptions="Center"
      HorizontalTextAlignment="Center"
      Text="Welcome to the .NET MAUI navigation demo!"
      VerticalOptions="Center" />
    <shared:Link
      Margin="0,20,0,0"
      Route="//join"
      Text="Get Started" />
    <Button shared:RouteNavigation.Route="//join" Text="Get Started" />
  </VerticalStackLayout>
</ContentPage>